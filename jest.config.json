{
  "moduleFileExtensions": ["json", "ts", "js"],
  "rootDir": "modules",
  "modulePaths": ["<rootDir>"],
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coveragePathIgnorePatterns": ["factories", ".stub.ts", ".constant.ts"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "setupFiles": ["./internal/testing/jest-setup.ts"],
  "autoMock": true
}
